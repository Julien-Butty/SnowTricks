<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SnowTricks!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/global.css') }}">


    {% endblock %}
</head>
<body >


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand " href="#">snowTricks</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <div class="navbar-nav ">

            <a class="nav-item nav-link active barre " href="{{ path('homepage') }}">Home <span class="sr-only">(current)</span></a>

            <a class="nav-item nav-link barre " href="#">Tricks</a>
            {% if is_granted('ROLE_USER') %}
            <a class="nav-item nav-link active " href="{{ path('security_logout')}}">"{{ app.user.username }}" Log Out</a>
            {% else %}
            <a class="nav-item nav-link barre " href="{{ path('security_login')}}">Sign in</a>
            <a class="nav-item nav-link " href="#">Sign up</a>
            {% endif %}


        </div>
    </div>
</nav>



{% for label, messages in app.flashes %}
{% for message in messages %}
    <div class="alert alert-{{ label }}">
        {{ message }}
    </div>
{% endfor %}
{% endfor %}



<!-- Block body -->
{% block body %}

{% endblock %}


