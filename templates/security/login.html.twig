{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login</h1>

                {% if error %}
                    <div class="alert alert-danger">
                       {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success">Connexion <span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
                <a href="{{ path('user_register') }}">S'enregistrer</a>
                <a href="{{ path('forgotten_password') }}">Mot de passe oubli√©</a>
            </div>
        </div>
    </div>
{% endblock %}